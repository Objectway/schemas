{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "table_config",
  "type": "object",
  "properties": {
    "head": {
      "type": "boolean",
      "defaultValue": true
    },
    "elementsInPage": {
      "type": "number",
      "defaultValue": "8"
    },
    "stickedColumns": {
      "type": "number",
      "defaultValue": "2"
    },
    "columns": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "key": { "type": "string" },
          "label": { "type": "string" },
          "className": { "type": "string" },
          "isSortable": { "type": "boolean" },
          "sortDesc": { "type": "boolean" },
          "actions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "status": { "type": "string" },
                "label": { "type": "string" },
                "list": {
                  "type": "object",
                  "properties": {
                    "type": { "type": "string" },
                    "name": { "type": "string" },
                    "class": { "type": "string" },
                    "label": { "type": "boolean" }
                  }
                }
              }
            }
          }
        }
      },
      "defaultValue": []
    }
  }
}