{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "toolbar_config",
    "properties": {
        "id": {
            "type": "number"
        },
        "mandatory": {
            "type": "boolean",
            "default": false
        },
        "widgetTemplateId": {
            "type": "number"
        },
        "widgetId": {
            "type": "number"
        },
        "value": {
            "view": {
                "type": "string"
            },
            "extraContent": {
                "type": "boolean",
                "default": false
            },
            "length": {
                "type": "number",
                "default": 0
            },
            "status": {
                "type": "string",
                "default": "closed"
            },
            "switches": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "active": { "type": "string"},
                        "list": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "class": { "type": "string" },
                                    "value": { "type": "string" }
                                }
                            }
                        }
                    }
                },
                "default": []
            },
            "filters": {
                "type": "array",
                "items":  {"$ref": "#/filePath/filter"},
                "default": []
            },
            "actions": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "status": { "type": "string" },
                        "label": { "type": "string" },
                        "list": {
                            "type": "object",
                            "properties": {
                                "type": { "type": "string" },
                                "name": { "type": "string" },
                                "class": { "type": "string" },
                                "label": { "type": "boolean" }
                            }
                        }
                    }
                },
                "default": []
            }
        }
    }
}